{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":disableRateLimiting",
    ":gitSignOff",
    ":label(dependencies)",
    ":rebaseStalePrs",
    ":enableVulnerabilityAlertsWithAdditionalLabel(area/security)",
    ":automergeDigest",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeMinor",
    "group:linters",
    "security:openssf-scorecard"
  ],
  "osvVulnerabilityAlerts": true,
  "packageRules": [
    {
      "description": "GitHub Actions dependencies",
      "matchManagers": ["github-actions"],
      "addLabels": ["github-actions"],
      "semanticCommitType": "ci",
      "commitMessageTopic": "{{depName}} action"
    },
    {
      "description": "Automerge non-major mise updates via PR",
      "matchManagers": ["mise"],
      "matchUpdateTypes": ["minor", "patch"],
      "addLabels": ["mise"],
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "ignorePaths": [
    "**/tmp/**",
    "**/chezmoi/dot_vim/**",
    "**/chezmoi/dot_tmux/**",
    "**/secrets/**",
    "**/todos/**",
    "**/knowledge/**"
  ]
}
